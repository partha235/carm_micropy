from machine import Pin, time_pulse_us
from utime import sleep_us, sleep_ms

trip=Pin(16,Pin.OUT)
echp=Pin(17,Pin.IN)

SOUND_SPEED=340


while True:
    trip.value(0)
    sleep_us(5)

    trip.value(1)
    sleep_us(10)
    trip.value(0)

    ultrason_duration = time_pulse_us(echp, 1, 30000) # Renvoie le temps de propagation de l'onde (en Âµs)
    distance_cm = SOUND_SPEED * ultrason_duration / 20000

    print(f"Distance : {distance_cm} cm")
    sleep_ms(500)